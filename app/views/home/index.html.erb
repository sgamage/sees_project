<form class="formbuilder"><fieldset>
<% if current_user.admin? %>
    <legend>Search criteria</legend>
    <div class="fltleft column">
      <ol>
        <li>
          <label>School name</label>
          <%= collection_select :schools, :school_id, School.all, :id, :display_title%>
        </li>
        <li>
          <label>Course</label>
          <%= collection_select :courses, :course_id, Course.all, :id, :name %>
        </li>
      </ol>
    </div>
    <div class="column fltleft">
      <ol>
        <li>
          <label>Status</label>
          <%= collection_select(:applicationstatus, :id, ApplicationStatus.all, :id, :status) %>
        </li>
      </ol>
    </div>
  </fieldset>
  <p class="button">
    <input type="button" class="submit-button button" value="Search"/> </p>
  <p class="home">
<% end %>  	
  <h1>Application List</h1>
  <table id="submitted_applications" width="99%">
    <tr>
      <th>Application Number</th>
      <th>Student Name</th>
      <th>UAC Number</th>
      <th>Submission Date</th>
      <th>Status</th>
      <th></th>
    <tr>
      <% @students.each do |student|  %>
      <tr>
        <td><%= application_id(student.id) %></td>                
        <td><%= link_to student.full_name, student_path(student) %></td>
        <td><%= student.uac_number %></td>
        <td><%= format_date(student.created_at) %></td>
        <td>Submitted</td>
        <td>
          <% if current_user.admin?%>
            <%= link_to "view", comments_path(:id => student.id) %>
          <%end%>
          <% if current_user.principal? && !student.feedback? %>
            <%= link_to "Feedback", new_feedback_path(:id => student.id) %>
          <%end%>
        </td>
      </tr>
    <% end %>			
  </table>
</p>
<br/>
<% if current_user.admin? %>
<p>
  <input type="button" class="submit-button button" value="Export to CSV"/> 
  <input type="button" class="submit-button button" value="Export to PDF"/>
</p>
<% end %>
</form>