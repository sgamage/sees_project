<h1>Principalâ€™s Supporting Application for <%= @student.try(:full_name) %> </h1>
<%= form_for(@feedback, :html =>{:class => "formbuilder", :onsubmit => "disableButtons();"}) do |f| %>
  <%= render :partial => 'comments/schooldetails', :locals => {:school => @school} %>   
  <%= render :partial => 'questions'%>
  <%= f.hidden_field :answers %>
  <%= f.hidden_field :id %>

  <fieldset><legend>Other Information</legend>
    <div ><ol>

        <li>
          <label class="long">Is there any other information you would like to add in support of the student?</label>
          <%= f.text_area :extra_note, :class => 'small' %>
        </li>
      </ol>

    </div>
    <div class="clr"></div>
  </fieldset>
  <div>
    I have read the student's application and i can <br/>
    <label></label><%= f.radio_button :recommandation_level, "recommand" %> Highly Recommend<br/>
    <label></label><%= f.radio_button :recommandation_level, "highly_recommand" %> Recommend<br/>
    <label></label><%= f.radio_button :recommandation_level, "support", :checked => true %> Support
  </div>
    <div class="buttons">
      <input type="button" value="Submit" class="submit-button button" id="save">
      <%= link_to "back", root_path, :class => 'submit-button button' %>
    </div>
<% end %>
<div id="feedback-confirm" title="Feedback submit">
 <p><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span>Are you sure you want to submit this feedback?</p>
</div>