<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "formbuilder" }) do |f| %>
    <div class="login-sub" >
      <fieldset><legend>Reset Password</legend>
      	<% unless devise_error_messages!.empty? %>
      	 <div class="form-error" id="error_explanation">
		  <ul>
		  	<% messages = devise_error_messages! %>
		  	<% messages.each do |msg| %>
		  	 <li><%= msg %></li>
		  	<% end %>
	      </ul>
	     </div>
	    <% end %>
	    <ol>
          <li>
            <label for="user_email">Email <em>*</em></label>
            <%= f.email_field :email %>
          </li> 
          <li>
            <div class="buttons"><%= f.submit "Reset Password", :class => 'submit-button button'  %>
            <%= submit_tag 'Back', :type => 'button', :onClick => 'location.href="/users/sign_in"', :class => 'login-set-align submit-button button' %>
          </li>
        </ol>        
      </fieldset>
    </div>
    <div class="clr"></div>
<% end %>
